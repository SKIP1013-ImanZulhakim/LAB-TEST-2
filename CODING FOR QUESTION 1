package labTest2;
import java.util.Scanner;
public class CircleComputation {
	/*1.1. Write a program called CircleComputation that prompts user for the radius of a circle in floating point number. The program shall read the input as double; 
	 * compute the diameter, circumference, and area of the circle in double; 
	 * and print the values rounded to 2 decimal places.
	 *  Use System-provided constant Math.PI for pi. 
	 *  The formulas are:

		diameter = 2.0 * radius;
		area = Math.PI * radius * radius;
		circumference = 2.0 * Math.PI * radius;
	 */
	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
		
		//declare variable
		double radius, diameter, area=0, circumference;
		
		// input radius
		System.out.println("Please enter radius:");
		radius = sc.nextDouble();
		
		//calculate diameter, area and circumference
		diameter = 2.0 * radius;
		area = Math.PI * radius * radius;
		circumference = 2.0 * Math.PI * radius;
		
		System.out.printf("The diameter is     : %.2f m",diameter);
		System.out.printf("\nThe area is         : %.2f m^2",area);
		System.out.printf("\nThe circumference is: %.2f m",circumference);
	}

}
